<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:Converters;assembly=Converters"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:viewModels="clr-namespace:ViewModels;assembly=ViewModels"
                    xmlns:common="clr-namespace:Common;assembly=Common"
                    mc:Ignorable="d">

    <DataTemplate x:Key="EntityDetailRDT" DataType="common:EntityKeyValuePair">
        <DataTemplate.Resources>
            <converters:NullVisibilityConverter x:Key="NullVisibilityConverter" />
            <converters:FontConverter x:Key="FontConverter"/>
            <converters:StringVisibilityConverter x:Key="VisibilityConverter"/>
        </DataTemplate.Resources>
        <StackPanel Orientation="Horizontal" Visibility="{Binding DisplayProperties.ReadProperties.GridProperties[Visibility], TargetNullValue={x:Static Visibility.Visible}, Converter={StaticResource VisibilityConverter}}" >
            <TextBlock Width="Auto"
                       Height="Auto"
                       Margin="5"
                       Visibility="{Binding DisplayProperties.ReadProperties.LabelProperties[Visibility], TargetNullValue={x:Static Visibility.Visible}, Converter={StaticResource VisibilityConverter}}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Text="{Binding Key}"
                       TextAlignment="Right"
                       FontSize="{Binding DisplayProperties.ReadProperties.LabelProperties[FontSize], TargetNullValue=16}"
                       FontWeight="{Binding DisplayProperties.ReadProperties.LabelProperties[FontWeight], TargetNullValue={x:Static FontWeights.Bold}, Converter={StaticResource FontConverter}}"
                       />
            <!---->
            <TextBlock Width="Auto"
                       Height="Auto"
                       MinWidth="75"
                       Margin="5"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       FontSize="{Binding DisplayProperties.ReadProperties.LabelProperties[FontSize], TargetNullValue=16}"
                       FontWeight="{Binding DisplayProperties.ReadProperties.LabelProperties[FontWeight], TargetNullValue={x:Static FontWeights.Bold}, Converter={StaticResource FontConverter}}"
                       Visibility="{Binding DisplayProperties.ReadProperties.ValueProperties[Visibility], TargetNullValue={x:Static Visibility.Visible}, Converter={StaticResource VisibilityConverter}}"
                       Text="{Binding Value,Mode=OneWay,
                                    UpdateSourceTrigger=PropertyChanged,
                                    ValidatesOnDataErrors=True}" />
        </StackPanel>

    </DataTemplate>
</ResourceDictionary>
